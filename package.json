{
  "name": "performance-comparer",
  "version": "0.1.0",
  "description": "A package for comparing performance of React components from different libraries",
  "scripts": {
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:styles": "stylelint '**/*.{css,scss}'",
    "lint:styles:fix": "npm run lint:styles -- --fix",
    "lint:prettier": "prettier --check '**/*.{js,jsx,ts,tsx,json,md}'",
    "lint:prettier:fix": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "lint": "npm-run-all --parallel lint:*",
    "playwright:install": "playwright install chromium webkit --with-deps",
    "playwright": "playwright test --config=playwright/playwright.config.ts",
    "playwright:update": "npm run playwright -- -u",
    "playwright:clear-cache": "rm -rf ./playwright/.cache",
    "playwright:docker": "./playwright/run-docker-command.sh npm run playwright --",
    "playwright:docker:update": "./playwright/run-docker-command.sh npm run playwright:update --",
    "playwright:docker:clear-cache": "./playwright/run-docker-command.sh clear-cache",
    "playwright:gui": "html-reporter gui --tool playwright --config=playwright/playwright.config.ts",
    "prepare": "husky",
    "testplane": "npx testplane --config=testplane/testplane.config.ts",
    "testplane:gui": "npx testplane gui --config=testplane/testplane.config.ts"
  },
  "devDependencies": {
    "@adobe/react-spectrum": "^3.41.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@gravity-ui/eslint-config": "^4.0.1",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@gravity-ui/stylelint-config": "^4.0.1",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@gravity-ui/uikit": "^7.10.0",
    "@mui/material": "^7.0.2",
    "@playwright/experimental-ct-react": "^1.52.0",
    "@playwright/test": "^1.52.0",
    "@swc/core": "^1.12.14",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@vitejs/plugin-react": "^4.6.0",
    "antd": "^5.24.9",
    "dotenv-defaults": "^5.0.2",
    "eslint": "^9.24.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "html-reporter": "^10.18.7",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-css": "^6.0.2",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass-embedded": "^1.87.0",
    "stylelint": "^15.11.0",
    "stylelint-use-logical": "^2.1.2",
    "testplane": "^8.29.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "nano-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
